<h1>New Recipe Form</h1>

<%= form_for @recipe do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |i| %>
        <%= i.label %>
        <%= i.check_box %>
        <br>
    <% end %>
    <%= f.submit%>
  
<% end %>